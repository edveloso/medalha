<p id="notice"><%= notice %></p>

<div>
  <img src="http://www.deusaindafala.com/wp-content/uploads/2016/08/medalha-de-ouro.jpg" height="auto" width="100"/>
</div>
<h1>Sistema Medalha</h1>
<br />


<table class="table">
  <thead>
    <tr>
      <th>Usuarios</th>
      <th>Atividade</th>
      <th>Quantidade
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>



  <tbody>
    <% @atividades_usuario.each do |atividade_usuario| %>
      <tr>
        <td><%= atividade_usuario.usuario.name %></td>
        <td><%= atividade_usuario.atividade.nome %></td>
        <td><%= AtividadeUsuario.group(:atividade_id, :usuario_id).where(usuario_id: atividade_usuario.usuario_id,
        atividade_id: atividade_usuario.atividade_id).count %></td>
    <% end %>
  </tbody>
</table>

